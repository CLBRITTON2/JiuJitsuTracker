@model ClassInfo

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Log Entry</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="BeltColor"></label>
            <input asp-for="BeltColor" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ClassUniform"></label>
            <input asp-for="ClassUniform" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ClassFocus"></label>
            <input asp-for="ClassFocus" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="MatTime"></label>
            <input asp-for="MatTime" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="JiuJitsuLog" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Log
        </a>
    </div>
</form>