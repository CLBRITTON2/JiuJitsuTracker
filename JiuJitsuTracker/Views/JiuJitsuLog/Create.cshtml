@model ClassInfo

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">New Log Entry</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="BeltColor"></label>
            <input asp-for="BeltColor" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ClassUniformType"></label>
            <input asp-for="ClassUniformType" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ClassFocus"></label>
            <input asp-for="ClassFocus" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="MatTime"></label>
            <input asp-for="MatTime" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="JiuJitsuLog" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Log
        </a>
    </div>
</form>