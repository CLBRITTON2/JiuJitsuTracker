@model IEnumerable<ClassInfo>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Jiu Jitsu Log</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="JiuJitsuLog" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create New Log Entry
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th width="10%">
                    Date
                </th>
                <th width="15%">
                    Belt Color
                </th>
                <th width="20%">
                    Class Uniform (Gi or No Gi)
                </th>
                <th width="45%">
                    Class Focus
                </th>
                <th width="10%">
                    Mat Time
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.ClassLogDateTime
                    </td>
                    <td>
                        @obj.BeltColor
                    </td>
                    <td>
                        @obj.ClassUniform
                    </td>
                    <td>
                        @obj.ClassFocus
                    </td>
                    <td>
                        @obj.MatTime
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

